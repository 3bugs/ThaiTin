<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_enabled="true" android:state_pressed="false">
        <inset android:insetLeft="0dp" android:insetTop="0dp" android:insetRight="0dp" android:insetBottom="0dp">
            <shape android:shape="rectangle">
                <corners android:radius="6dp" />
                <solid android:color="#33aaaaaa" />
                <stroke android:width="0dp" android:color="#33aaaaaa" />
                <padding android:bottom="10dp" android:left="12dp" android:right="12dp" android:top="10dp" />
            </shape>
        </inset>
    </item>
    <item android:state_enabled="true" android:state_pressed="true">
        <inset android:insetLeft="0dp" android:insetTop="0dp" android:insetRight="0dp" android:insetBottom="0dp">
            <shape android:shape="rectangle">
                <corners android:radius="6dp" />
                <solid android:color="#10aaaaaa" />
                <stroke android:width="0dp" android:color="#10aaaaaa" />
                <padding android:bottom="10dp" android:left="12dp" android:right="12dp" android:top="10dp" />
            </shape>
        </inset>
    </item>
    <item android:state_enabled="false">
        <inset android:insetLeft="0dp" android:insetTop="0dp" android:insetRight="0dp" android:insetBottom="0dp">
            <shape android:shape="rectangle">
                <corners android:radius="6dp" />
                <solid android:color="#aaaaaa" />
                <stroke android:width="0dp" android:color="#aaaaaa" />
                <padding android:bottom="10dp" android:left="12dp" android:right="12dp" android:top="10dp" />
            </shape>
        </inset>
    </item>

</selector>